<!DOCTYPE html>
<html lang="es">
  <head>
  <title>Mi sitio
  </title>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="../stylesheets/style.css">
 </head>

 <body id='index' >
        <%- include('partials/navbarRegistrados'); %>
	
    <% if (mensaje) { %>
      <div class="alert alert-danger" role="alert">
        <%- mensaje %>
      </div>
      <%  } %>

      <div class="card">
        <div class="card text-white bg-info"> Agregar Productos </div>
          <div class="card-body">
            <form action="/productos/addP" method="post">
              <div class="form-group">
                <label>Clave del producto:</label>
                <input type="number" class="form-control" name="claveProducto" value="<%= claveProducto %>"  autocomplete="off" required >
              </div>

             <div class="form-group">
               <label>Nombre del producto:</label>
                <input type="text" class="form-control" name="nombreProducto" value="<%= nombreProducto  %>"  autocomplete="off" required >
            </div>

           <div class="form-group">
                <label>Precio:</label>
                <input type="number" class="form-control" name="precio" value="<%= precio %>" autocomplete="off" required>
             </div>

           <div class="form-group">

               <label>Color:</label>
                <input type="text" class="form-control" name="color" value="<%= color %>"  autocomplete="off" required >
            </div>

             <div class="form-group">

                <label>Existencia:</label>
                <select type="text" class="form-control" name="existencia" value="<%= existencia %> required">
                 <option>true</option>
                 <option>false</option>
              </select>
             </div>

             <div class="form-group">
                <input type="submit" class="btn btn-info" value="Agregar" />
                <a href="/productos" class="btn btn-dark" >Volver</a>
             </div>							     
          </form>
       </div>
    </div>

       <%- include('partials/footer'); %>
         <%- include('partials/script'); %>
</body>
 </html>
