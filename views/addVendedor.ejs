<!DOCTYPE html>
<html lang="es">
  <head>
  <title>Mi sitio
  </title>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="../stylesheets/style.css">
 </head>

 <body id='index' >
        <%- include('partials/navbarRegistrados'); %>

    <% if (mensaje) { %>
      <div class="alert alert-danger" role="alert">
        <%- mensaje %>
      </div>
      <%  } %>

      <div class="card">
        <div class="card text-white bg-info"> Agregar Vendedor </div>
          <div class="card-body">      
            <form action="/vendedor/addVendedor" method="post">
              <div class="form-group">			
                <label>Clave de vendedor:</label>						     
                <input type="number" class="form-control" name="claveVendedor" value="<%= claveVendedor %>"  autocomplete="off" required >
              </div>							   

             <div class="form-group">
               <label>Nombre del vendedor:</label>
		<input type="text" class="form-control" name="nombre" value="<%= nombre %>"  autocomplete="off" required >  
            </div>

	   <div class="form-group">
                <label>Apellidos:</label>
                <input type="text" class="form-control" name="apellidos" value="<%= apellidos %>" autocomplete="off" required>
             </div>		     

          <div class="form-group">
                <label>Edad:</label>
                <input type="number" class="form-control" name="edad" value="<%= edad %>" autocomplete="off" required>
             </div>

           <div class="form-group">
            <label>Genero:</label>
              <select type="text" class="form-control" name="genero" value="<%= genero %>" required>
                 <option>masculino</option>
                 <option>femenino</option>
              </select>
          </div>

             <div class="form-group">
                <input type="submit" class="btn btn-info" value="Agregar" />
		<a href="/vendedor" class="btn btn-dark" >Volver</a>
             </div>
          </form>
       </div>
    </div>

       <%- include('partials/footer'); %>
         <%- include('partials/script'); %>
</body>
 </html>
